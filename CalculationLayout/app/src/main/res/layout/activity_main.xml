<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#1C0291">

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center"
            android:text="@string/number"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:textStyle="bold|italic" />

    </LinearLayout>
    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <Button
            android:id="@+id/btn_ce"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:backgroundTint="#C6C4C4"
            android:text="CE"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:layout_margin="2dp"
            />

        <Button
            android:id="@+id/btn_c"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:backgroundTint="#C6C4C4"
            android:text="C"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btn_del"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:backgroundTint="#C6C4C4"
            android:text="del"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btn_pow"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:backgroundTint="#C6C4C4"
            android:text="pow"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:layout_margin="2dp"
            />

    </LinearLayout>
    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <Button
            android:id="@+id/btn7"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:backgroundTint="#C6C4C4"
            android:text="7"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btn8"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:backgroundTint="#C6C4C4"
            android:text="8"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:layout_margin="2dp"
            />

        <Button
            android:id="@+id/btn9"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:backgroundTint="#C6C4C4"
            android:text="9"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:layout_margin="2dp"
            />

        <Button
            android:id="@+id/btnplus"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:backgroundTint="#C6C4C4"
            android:text="+"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:layout_margin="2dp"
            />
    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <Button
            android:id="@+id/btn4"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:backgroundTint="#C6C4C4"
            android:text="4"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btn5"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:backgroundTint="#C6C4C4"
            android:text="5"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:layout_margin="2dp"
            />

        <Button
            android:id="@+id/btn6"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:backgroundTint="#C6C4C4"
            android:text="6"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:layout_margin="2dp"
            />

        <Button
            android:id="@+id/btnsub"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:backgroundTint="#C6C4C4"
            android:text="-"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:layout_margin="2dp"
            />
    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <Button
            android:id="@+id/btn1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:backgroundTint="#C6C4C4"
            android:text="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btn2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:backgroundTint="#C6C4C4"
            android:text="2"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:layout_margin="2dp"
            />

        <Button
            android:id="@+id/btn3"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:backgroundTint="#C6C4C4"
            android:text="3"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:layout_margin="2dp"
            />

        <Button
            android:id="@+id/btnmul"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:backgroundTint="#C6C4C4"
            android:text="*"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:layout_margin="2dp"
            />
    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <Button
            android:id="@+id/btn0"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:backgroundTint="#C6C4C4"
            android:text="0"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btndot"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:backgroundTint="#C6C4C4"
            android:text="."
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:layout_margin="2dp"
            />

        <Button
            android:id="@+id/btnequl"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:backgroundTint="#C6C4C4"
            android:text="="
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:layout_margin="2dp"
            />

        <Button
            android:id="@+id/btndiv"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:backgroundTint="#C6C4C4"
            android:text="/"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:layout_margin="2dp"
            />
    </LinearLayout>
</LinearLayout>