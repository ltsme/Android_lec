<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BMI 계산기"
            android:textSize="30dp"
            android:background="@color/purple_200"
            android:gravity="center_horizontal"
            />

    </LinearLayout>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별을 선택하세요 : "
            android:textSize="15dp">

        </TextView>

        <RadioGroup
            android:id="@+id/rg01"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbtnMan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남">
            </RadioButton>

            <RadioButton
                android:id="@+id/rbtnWoman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여">
            </RadioButton>

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나이를 입력하세요 : "
            android:textSize="15dp"

            >

        </TextView>

        <EditText
            android:id="@+id/etextAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="나이를 입력하세요"
            android:inputType="number"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="당신의 키를 입력하세요 : "
            android:textSize="15dp">
        </TextView>

        <EditText
            android:id="@+id/etextheight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="키(cm)"
            android:inputType="number"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="당신의 몸무게를 입력하세요 : "
            android:textSize="15dp">
        </TextView>

        <EditText
            android:id="@+id/etextweight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="몸무게(kg)"
            android:inputType="number"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <Button
           android:id="@+id/btnreset"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="RESET"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <Button
            android:backgroundTint="#909090"
            android:id="@+id/btnresult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="계산하기"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="당신의 BMI 지수는 "
            />

        <TextView
            android:id="@+id/textresult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="          "></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text=" 입니다."
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/textresultstr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp"
            android:textColor="#FF0000"
            />

    </LinearLayout>




</LinearLayout>