<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chatMessagelayoutMeHealth"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2sp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:layout_gravity="start"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_chatdatasigndate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:gravity="right"
        android:text="date" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60sp"
        android:layout_gravity="start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_healthchatimage"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/no_profile" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="2sp"
            android:layout_weight="1"
            android:background="@drawable/healthdata_you"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="1sp">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="55sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/rate" />

            <TextView
                android:id="@+id/tv_chatHeart1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="bpm" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/healthdata_you"

            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="1sp">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="55sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/lungs32" />

            <TextView
                android:id="@+id/tv_chatRes1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="res" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_sendtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="1sp"
            android:layout_marginTop="1sp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="시간" />

    </LinearLayout>

</LinearLayout>